{
  "policy": {
    "name": "root-user-login-detected",
    "resource": "account",
    "description": "Notifies Security and Cloud Admins teams on any AWS root user console logins\n",
    "mode": {
      "role": "arn:aws:iam::529219089249:role/cloud-sheriff-lambda-execution-role",
      "type": "cloudtrail",
      "events": [
        "ConsoleLogin"
      ],
      "tags": {
        "custodian-info": "mode=cloudtrail:version=0.8.45.0"
      }
    },
    "filters": [
      {
        "type": "event",
        "key": "detail.userIdentity.type",
        "value_type": "swap",
        "op": "in",
        "value": "Root"
      }
    ],
    "actions": [
      {
        "type": "post-finding",
        "compliance_status": "FAILED",
        "criticality": 50,
        "description": "Root user login.\n",
        "recommendation": "Understand the purpose for the root user login.",
        "severity_normalized": 50,
        "title": "root-user-login-detected",
        "types": [
          "TTPs/Initial Access"
        ],
        "confidence": 100
      }
    ]
  },
